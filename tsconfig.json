{
  "compilerOptions": {
    "declaration": true,
    "outDir": "build",
    "rootDir": "src",
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": [
    "./node_modules",
    ".eslintrc.js",
    ".eslintrc.js",
    ".eslintignore"
  ],
  "include": ["src/**/*"]
}
